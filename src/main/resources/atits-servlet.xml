			<!--<mvc:mapping path="/**" />-->
			<!--<mvc:exclude-mapping path="/assets/**" />-->
			<!--<mvc:exclude-mapping path="/docs/**" />-->
			<!--<bean class="com.atits.interceptor.LoginInterceptor"/>-->
		<!--</mvc:interceptor>-->
	<!--</mvc:interceptors>-->

	<!-- 访问静态资源 -->
	<mvc:resources mapping="/assets/**" location="/assets/" />
	<mvc:resources mapping="/docs/**" location="/docs/" />

